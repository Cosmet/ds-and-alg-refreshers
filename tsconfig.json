{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "dom", "es2015", "scripthost", "es2017"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitAny": false
  }
}
